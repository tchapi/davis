<div aria-live="polite" aria-atomic="true" class="flashes">
  <div class="inner">
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000">
          <div class="toast-header">
            <span class="badge rounded-pill bg-{{ label }} me-2">&nbsp;</span>
            <strong class="me-auto">{{ ("label." ~ label)|trans }}</strong>
            <button type="button" class="ms-2 mb-1 close" data-dismiss="toast" aria-label="{{ "close"|trans }}">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="toast-body">{{ message }}</div>
        </div>
      {% endfor %}
   {% endfor %}
  </div>
</div>
