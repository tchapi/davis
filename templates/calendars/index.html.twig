            <a href="{{ path('calendar_delegates',{id: calendar.id}) }}" class="btn btn-outline-secondary">ğŸ’ {{ "users.delegates"|trans }}</a>
            <a href="{{ path('calendar_edit',{username: username, id: calendar.id})}}" class="btn btn-outline-primary">âœ {{ "edit"|trans }}</a>
            <a href="#" data-href="{{ path('calendar_delete',{username: username, id: calendar.id})}}" class="btn btn-outline-danger delete-modal">âš  {{ "delete"|trans }}</a>
        </div>
    </div>
{% endfor %}
</div>

